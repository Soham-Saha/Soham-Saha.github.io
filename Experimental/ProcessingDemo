<html>

<head>
        <script src="https://cdn.jsdelivr.net/npm/p5@1.11.0/lib/p5.min.js"></script>
</head>

<body>
        <!-- Create slider input elements for adjusting the values of 'a' and 'b' -->
        <input type="range" id="slider1" min="0" max="0.2" step="0.01" value="0.05" oninput="updateA()" />
        <input type="range" id="slider2" min="0" max="0.15" step="0.001" value="0.15" oninput="updateB()" />
        <script>
                let a = 0.05 // Initial value of 'a'
                let b = 0.15 // Initial value of 'b'

                function setup() {
                        createCanvas(400, 300)
                }

                function draw() {
                        background("white")
                        for (let x = 0; x < 400; x += 0.5) {
                                let amp = noise(x * 0.05)
                                stroke(`rgba(150, 117, 92, ${(1 / amp) * a + b})`)
                                let shift = -3 * noise(x * 0.1 + 10)
                                line(x, 200 + shift, x, 200 + shift + amp * 70)
                        }
                }

                function updateA() {
                        // Convert the slider value to a float
                        a = parseFloat(document.getElementById("slider1").value)
                }

                function updateB() {
                        // Convert the slider value to a float
                        b = parseFloat(document.getElementById("slider2").value)
                        document.getElementById("inp").innerHTML = b
                }
        </script>
</body>

</html>